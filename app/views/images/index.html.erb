<%= render 'sidebar' %>
<body>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Created on</th>
      <th>Patient name</th>
      <th>Patient/Image Identifier</th>
      <th>Image Description</th>
      <th>Date of Birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.created_at.strftime("%b %d %Y") %></td>
        <td><%= image.patient_name %></td>
        <td><%= image.patient_id %></td>
        <td><%= image.image_desc %></td>
        <td><%= image.dob %></td>
        <td><%= button_to "View Image", image, :class => "btn btn-primary btn-sm", :method => :get  %></td>
        <td><%= button_to "Download", image.image_file.url(:original, false), :class => "btn btn-warning btn-sm", :method => :get %></td>
        <td><%= link_to (image_tag("trash.png", width: '15', height: '15')) + " Delete", image, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="center">
<%= will_paginate @images %>


<%= button_to '+ Send a New Image', new_image_path, :class => 'btn btn-large btn-success text-center', :method => :get  %>

</div>