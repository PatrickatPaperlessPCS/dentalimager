<%= render 'sidebar' %>
<div class="sign_out_right">
<%= button_to 'Sign Out', destroy_user_session_path,  :method=>'delete', :class => 'btn btn-large btn-black text-center'%>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Created at</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient.images.each do |image| %>
      <tr>
        <td><%= image.created_at.strftime("%b %d %Y") %></td>
        <td><%= image.image_desc %></td>
      <td><%= image_tag image.image_file.url %></td>
<!--          <td><%= image_tag image.image_file(:thumb) %></td> -->
        <td><%= link_to (image_tag("trash.png", width: '15', height: '15')) + " Delete", image, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to 'Destroy Image', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>

</tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Files', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
